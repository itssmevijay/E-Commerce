<div class="screen-overlay"></div>
<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Products</h2>
    </div>
    <div>
      <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create new</a>
    </div>
  </div>
  <div class="card mb-4">
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>
              No.
            </th>
            <th>
              Image
            </th>
            <th>
              Name
            </th>
            <th>
              Brand
            </th>
            <th>
              Price
            </th>
            <th>
              Quantity
            </th>
            <th>
              Catogory
            </th>
            <th>
              <!-- <button>btn</button> -->
            </th>
          </tr>
        </thead>
        <tbody>
          <% product.forEach((item,index)=>{%>
          <tr>
            <td>
              <%= index+1 %>
            </td>
            <td>
              <img style="border-radius:0;height: 100px;width: 100px;" src="/productImages/<%= item.img[0] %>" alt="img">
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.brand %>

            </td>
            <td>
              â‚¹<%= item.price%>
            </td>

            <td>
              <%= item.quantity %>
            </td>

            <td>
              <%= item.category %>
            </td>

            <td>
              <a href="/admin/editProduct/<%=item._id%>"> <button class="btn btn-info btn-sm">Edit</button></a>
              <a href="#" onclick="deleteProduct('<%= item._id %>')"><button class="btn btn-danger btn-sm">Delete</button></a>
            </td>
          </tr>
          <% })%>
    </div> <!-- card-body end// -->
  </div> <!-- card end// -->

</section> <!-- content-main end// -->

<script>
  function deleteProduct(proId){
    swal({
        title: "Are you sure?",
        text: "Once deleted, you will not be able to recover this Product!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
          $.ajax({
            url: '/admin/deleteProduct/' + proId,
            method: 'delete',
            success(response) {
              console.log(response,'---------');
              if(response.status){
                swal("Product has been deleted!", {
                  icon: "success",
                }).then(()=>{
                  location.reload()
                })
              }else{
                swal("Oops!", "Something went wrong. Product not deleted!", "error");
              }
            }
          })
        }else{
          swal("Product is safe!");
        }
      })

  }
</script>