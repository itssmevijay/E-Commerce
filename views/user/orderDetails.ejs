<script>
  // ajax call for cancelling order
  function cancelOrder(orderId, total) {
  // Show confirmation message using SweetAlert
  Swal.fire({
    title: 'Are you sure?',
    text: 'You will not be able to recover this order!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, cancel it!',
    timer: 5000
  }).then((result) => {
    // If the user confirms, show the cancel reason section
    if (result.isConfirmed) {
      let cancelButton = document.querySelector(".btn-danger");
      let cancelReasonSection = document.getElementById("cancel-reason-section");
      cancelButton.style.display = "none";
      cancelReasonSection.style.display = "block";
    }
  })
}


function submitCancelReason() {
  let orderId = '<%=orderId%>';
  let total = '<%=orders[0].totalPrice%>';
  let cancelReason = document.getElementById("cancel-reason-input").value;

  // Make an AJAX call to submit the cancel reason
  $.ajax({
    url: `/cancel-order/?id=${orderId}&total=${total}&reason=${cancelReason}`,
    method: 'POST',
    success: (canceled) => {
      // Update the UI with the cancellation message
      let cancelReasonSection = document.getElementById("cancel-reason-section");
      let canceledMessage = document.createElement("div");
      canceledMessage.innerHTML = `Order canceled. Reason: ${cancelReason}`;
      canceledMessage.style.color = "red";
      canceledMessage.style.fontSize = "1.2rem";
      cancelReasonSection.parentNode.insertBefore(canceledMessage, cancelReasonSection.nextSibling);
      cancelReasonSection.style.display = "none";
    }
  });
}



  //ajax call for returning order 
  function returnOrder(orderId, total) {
  Swal.fire({
    title: 'Return Order',
    text: 'Are you sure you want to return this order?',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, return it!',
    cancelButtonText: 'Cancel',
    timer: 5000
  }).then((result) => {
    if (result.isConfirmed) {
      let returnButton = document.querySelector(".btn-info");
      let returnReasonSection = document.getElementById("return-reason-section");
      returnButton.style.display = "none";
      returnReasonSection.style.display = "block";
    }
  })
}


function submitReturnReason() {
  let orderId = '<%=orderId%>';
  let total = '<%=orders[0].totalPrice%>';
  let returnReason = document.getElementById("return-reason-input").value;

  $.ajax({
    url: `/return-order/?id=${orderId}&total=${total}&reason=${returnReason}`,
    method: 'POST',
    success: (returnOrderStatus) => {
      let returnReasonSection = document.getElementById("return-reason-section");
      let returnedMessage = document.createElement("div");
      returnedMessage.innerHTML = `Order Returned. Reason: ${returnReason}`;
      returnedMessage.style.color = "red";
      returnedMessage.style.fontSize = "1.2rem";
      returnReasonSection.parentNode.insertBefore(returnedMessage, returnReasonSection.nextSibling);
      returnReasonSection.style.display = "none";
    }
  })
}




 function downloadInvoice() {
  let jsonData = document.getElementById("vj").textContent;
  let data = JSON.parse(jsonData);

  easyinvoice.createInvoice(data, function (result) {
    // The response will contain a base64 encoded PDF file
    console.log("PDF base64 string: ", result.pdf);
    easyinvoice.download("invoice.pdf");

    // Show Swal.fire alert when the invoice is downloaded
    Swal.fire({
      title: "Invoice Downloaded",
      text: "Your invoice has been successfully downloaded.",
      icon: "success",
      confirmButtonText: "OK"
    });
  });
}




// Close the modal when the "Return" button is clicked
document.getElementById('btn-return').addEventListener('click', function() {
  $('#staticBackdrop').modal('hide');
});
  //progress bar actions 
  //actions on progress bar
  const progressBar = document.getElementById('progress-bar');

  // You can set the progress bar value here based on the order status received from the database
  const orderStatus = '<%=orders[0].orderConfirm%>';
  let progressBarValue = 0;

  if (orderStatus === 'confirmed') {
    progressBarValue = 33;
  } else if (orderStatus === 'shipped') {
    progressBarValue = 66;
  } else if (orderStatus === 'delivered') {
    progressBarValue = 100;
  }

  progressBar.style.width = progressBarValue + '%';
  progressBar.setAttribute('aria-valuenow', progressBarValue);
</script>